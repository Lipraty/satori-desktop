{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "Bundler",
    "strictFunctionTypes": false,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules",
      "./src/shared"
    ],
    "types": [
      "node",
      "electron-vite/node",
    ],
    "paths": {
      "@shared/*": ["./src/shared/*"]
    },
    "noImplicitAny": true,
  },
  "include": [
    "src/main.ts",
    "src/loader.ts",
    "src/internal/**/*",
    "forge.*",
    "vite.*.config.ts", "src/shared/exposed.d.ts",
  ]
}
{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "Bundler",
    "strictFunctionTypes": false,
    "types": [
      "node",
      "electron-vite/node",
    ],
    "paths": {
      "@main": ["./src/main/index.ts"],
      "@shared/*": ["./src/shared/*"],
      "@main/*": ["./src/main/*"],
    },
    "noImplicitAny": true,
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*",
    "forge.*",
    "vite.*.config.ts",
  ]
}
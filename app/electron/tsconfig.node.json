{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "electron-vite/node"
    ],
    "strictFunctionTypes": false,
    "noImplicitAny": true
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "forge.*",
    "vite.*.config.ts"
  ]
}
